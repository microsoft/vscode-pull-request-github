{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build",
			"group": "build",
			"problemMatcher": [
				"$ts-checker-webpack",
				"$ts-checker-eslint-webpack"
			]
		},
		{
			"type": "npm",
			"script": "lint",
			"group": "build",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"problemMatcher": [
				"$ts-checker-webpack-watch",
				"$ts-checker-eslint-webpack-watch"
			]
		}
	]
}