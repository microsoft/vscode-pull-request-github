{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"noUnusedLocals": true,
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": ".",
		"jsx": "react",
		"typeRoots": [
			"./node_modules/@types",
			"./src/typings/"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
}
